# ===== Core LLM (OpenRouter) =====
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.5-flash-lite
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ===== Storage backend =====
# false: in-memory (local dev)
# true: use Firestore for users/jobs/episodes/interactions
USE_FIRESTORE=false
FIRESTORE_PROJECT_ID=your-gcp-project-id

# Service account JSON path (recommended for local dev)
# Example: C:\secrets\stepwise-sa.json
GOOGLE_APPLICATION_CREDENTIALS=

# ===== Runtime =====
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ALLOW_ORIGINS=*
TTS_CACHE_ENABLED=true
TTS_CACHE_DIR=audio_cache
TTS_CACHE_NORMALIZE_STRICT=true
TTS_DEFAULT_PROVIDER=kokoro
TTS_FALLBACK_TO_KOKORO=false
VOICEVOX_BASE_URL=http://127.0.0.1:50021
VOICEVOX_DEFAULT_SPEAKER=3
VOICEVOX_CONNECT_TIMEOUT_SECONDS=10
VOICEVOX_REQUEST_TIMEOUT_SECONDS=60
VOICEVOX_WARMUP_ENABLED=true
VOICEVOX_CACHE_SIZE=256
VOICEVOX_TIMINGS_SECOND_PASS=false
TTS_SERIAL_SECTION_MODE=true
TTS_MAX_WORKERS=1
FINALIZE_AUDIO_DEFERRED=true
SCRIPT_TARGET_CHARS=1000
SCRIPT_CHAR_BUDGET_MODE=total
SCRIPT_SECTION_MIN_CHARS=300
SCRIPT_SECTION_TARGET_CHARS=700
SCRIPT_SECTION_MAX_CHARS=750
SCRIPT_INTRO_MIN_CHARS=500
SCRIPT_INTRO_TARGET_CHARS=700
SCRIPT_INTRO_MAX_CHARS=750
SCRIPT_TARGET_SECONDS=180
SCRIPT_CHARS_PER_SECOND=5.0
EXTRACT_TIMEOUT_SECONDS=12
